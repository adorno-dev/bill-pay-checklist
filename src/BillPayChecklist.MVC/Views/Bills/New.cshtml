<h3>New Bill</h3>
<hr>
<form action="#" method="post">
    <input type="text" name="title" placeholder="Title">
    <div>
        <select name="dueday">
            <option>Day</option>
            @for (int i = 1; i <= 31; i++) { <option value="@i">@i.ToString("D2")</option> }
        </select>
        <select name="refmonth">
            <option>Month</option>
            <option value="1">Jan</option>
            <option value="2">Fev</option>
            <option value="3">Mar</option>
            <option value="4">Apr</option>
            <option value="5">May</option>
            <option value="6">Jun</option>
            <option value="7">Jul</option>
            <option value="8">Aug</option>
            <option value="9">Sep</option>
            <option value="10">Oct</option>
            <option value="11">Nov</option>
            <option value="12">Dec</option>
        </select>
    </div>
    <div class="checkbox">
        <input type="checkbox" name="recurrent" id="recurrent" />
        <label for="recurrent">Recurrent</label>
    </div>
    <div class="flex">
        <a class="button" asp-controller="home" asp-action="index">Cancel</a>
        <button class="button primary" type="submit">Confirm</button>
    </div>
</form>